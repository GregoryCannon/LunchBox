@import "../../styles/colors"
@import "../../styles/shared_styles"

.title
  color: $primary-red

.content
  font-size: 20px
  color: $primary_navy

.pollContainer
  padding-bottom: 25px

  .optionsContainer
    padding-top: 20px
    padding-bottom: 25px
    ul, ul>li, li>a
      font-size: 20px
      font-family: $heading !important
      z-index: 0 !important
    li>a
      padding: 5px 15px

  .pollHeading
    text-align: center
    font-weight: 900
    font-size: 42px
    margin: 35px 75px 15px 75px
    padding-top: 20px

  .pollSubheading
    font-size: 24px
    font-weight: 900
    padding: 0
    margin: 0
    margin-bottom: 15px
    color: $primary_navy !important
    div
      display: inline-block
      margin: 0 5px

  .input
    font-size: 18px
    font-weight: 500

.popupOverlay
  position: fixed
  top: 0
  bottom: 0
  right: 0
  left: 0
  background-color: $overlay-grey
