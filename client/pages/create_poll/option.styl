@import "../../styles/colors"
@import "../../styles/shared_styles"

$option-height = 105px

.option
  height: $option-height
  padding: 12px
  border-radius: 3px
  border: solid 1px $border-grey
  cursor: pointer
  margin-bottom: 10px

  > div
    height: 70px

  .infoContainer
    float: left
    width: 100px
    min-width: 320px
    margin-left: 15px

  .optionTitle
    height: 30px
    text-align: left
    font-size: 20px
    font-weight: 900
    color: $primary-blue
    overflow: hidden
    white-space: nowrap
    text-overflow: ellipsis
    a:hover
      color: $primary-blue
      text-decoration: underline

  .optionImg
    height: 70px
    width: @height
    float: left
    margin: 5px 0

  .checkBox
    height: 20px
    margin: 25px 25px 25px 10px
    float: left

  .optionDistance
    padding: 20px
    float: right

  .optionRating
    padding-top: 2px
    font-size: 16px
    color: $primary-red

  .emptyStar
    color: $grey-subtitle

  .optionCuisine
    font-size: 16px
    color: $grey-subtitle
    text-align: left
    padding-left: 15px
    overflow: hidden
    white-space: nowrap
    text-overflow: ellipsis

  .optionInfo
    font-size: 14px
    text-align: left
    padding-left: 15px

.selectedOption
  @extend .option
  border: solid 1px $primary-blue
  background-color: $background-blue
