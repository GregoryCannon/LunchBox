@import "../../styles/colors"
@import "../../styles/shared_styles"

.title
  color: $primary-red

.content
  font-size: 20px
  color: $primary_navy

.pollContainer
  padding: 0 80px
  padding-bottom: 25px

  .pollHeading
    text-align: center
    font-weight: 900
    font-size: 42px
    margin: 35px 75px 25px 75px

  .searchContainer
    padding: 0 40px

  .optionsContainer
    padding-top: 20px
    padding-bottom: 25px
    ul, ul>li, li>a
      font-size: 18px
      font-family: $heading !important
      z-index: 0 !important
    li>a
      padding: 3px 10px

  .loadingContainer
    border: solid 1px $primary-blue
    border-radius: 3px
    width: 100%
    min-height: 150px
    >div
      position: absolute
      margin: auto
      top: 0
      left: 0
      right: 0
      bottom: 0

  .input, .input>select, .input>input
    z-index: 0
    max-width: 550px
    margin : 0 auto
    font-family: $content
    text-align: left
    height: 40px
    font-size: 18px
    font-weight: 300
    border-color: $border-grey
    border-radius: 3px
    box-shadow: none
    -webkit-appearance: none
    >div>div
      z-index: 1

  .addon
    padding: 0px
    border: none
    box-shadow: none
    background-color: $button-red

.popupOverlay
  position: fixed
  top: 0
  bottom: 0
  right: 0
  left: 0
  background-color: $overlay-grey
