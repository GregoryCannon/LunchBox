@import "../../styles/colors"
@import "../../styles/shared_styles"

$top-option-height = 160px
$other-option-height = 80px

.optionTitle
  text-align: left !important
  font-size: 24px !important
  font-weight: 900 !important
  color: $primary-blue !important
  overflow: hidden !important
  white-space: nowrap !important
  padding-left: 20px
  text-overflow: ellipsis !important

  a:hover
    color: $primary-blue
    text-decoration: underline

.infoContainer
  .info
    float: left
    margin: 0 20px

    .optionCuisine
      color: $grey-subtitle
      text-align: left
      overflow: hidden
      white-space: nowrap
      margin-top: 3px
      text-overflow: ellipsis

  > div
    font-size: 16px
    text-align: left

.topOption
  height: $top-option-height
  padding: 15px 40px
  border-radius: 3px
  border: solid 1px $primary-blue
  background-color: $background-blue
  margin-bottom: 10px

  @media screen and (max-width: 992px)
    padding: 15px 0 15px 10px

  .ranking
    text-align: center
    font-size: 35px
    font-weight: 900
    color: $primary-blue
    overflow: hidden
    white-space: nowrap
    text-overflow: ellipsis
    float: left
    margin: 40px 40px 0 0

    @media screen and (max-width: 992px)
      margin: 40px 10px 0

  .optionImg
    width: 118px
    height: @width
    margin: 5px 0
    float: left

  .optionRating
    font-size: 14px
    color: $primary-red

  .emptyStar
    color: $grey-subtitle

  .optionInfo
    font-size: 14px
    text-align: left

    >span
      padding-right: 5px

  .votes
    float: right
    margin-right: 20px

    button
      margin-top: 10px
      height: 40px
      width: 63px
      img
        padding-top: 8px
        padding-bottom: 8px
        height: 35px
      >div
        font-size: 20px
      >div>div
        font-size: 20px
        color: $white

.otherOption
  @extend .topOption
  padding: 25px 60px 25px 40px
  margin-top: 20px
  height: $other-option-height
  text-align: left
  border: none
  background-color: $white

  @media screen and (max-width: 992px)
    padding: 25px 20px 25px 15px

  .secondaryA
    display: inline-block
    overflow: hidden
    text-overflow: ellipsis

    @media screen and (max-width: 992px)
      max-width: 50%

  .ranking
    font-weight: 900
    font-size: 24px
    margin: 0 12px

  .optionCuisine
    font-size: 16px
    color: $grey-subtitle
    text-align: left
    margin: 0 10px
    position: relative
    bottom: 10px
    overflow: hidden
    overflow-text: ellipsis

    @media screen and (max-width: 992px)
      max-width: 30%

  span
    margin-right: 10px

  .info
    float: left

    @media screen and (max-width: 992px)
      max-width: 60%

  .votes
    float: right
    margin-right: 0

    button
      margin-top: -5px
      height: 40px
      width: 63px
      img
        padding-top: 8px
        padding-bottom: 8px
        height: 35px
      >div
        font-size: 20px
