@import "../../styles/colors"
@import "../../styles/shared_styles"
@import "./stylesheet"

.popup
  width: 700px
  height: 448px
  padding: 60px
  background-color: $primary-red
  color: $white
  text-align: center
  font-size: 24px
  font-weight: 300
  border: solid 1px $border-grey
  position:absolute
  top: 25%;
  left: 50%;
  margin-left: (@width / -2)
  margin-top: (@height / -4)

  a
    color: $white

.logo
  font-size: 36px

.message
  font-size: 22px

.alertMessage
  margin-top: 25px
  font-style: italic
  font-size: 14px
  display: inline

hr
  display: block
  height: 1px
  border: 0
  border-top: 1px solid #fff
  margin-top: 20px
  margin-bottom: 45px

.btnContainer
  width: 300px
  margin: 0 auto

.btnInline
  float: left
  button
    margin-left: 20px
    margin-right: 10px
