@import "../../global_styles/colors"
@import "../../global_styles/shared_styles"
@import "./stylesheet"

$option-height = 100px

.option
  height: $option-height
  padding: 15px
  border-radius: 5px
  border: solid 1px $border-grey
  cursor: pointer
  > div
    height: 70px

.selectedOption
  @extend .option
  border: solid 1px $primary-blue
  background-color: $background-blue

.optionTitle
  text-align: left
  color: $primary-blue

.optionImg
  height: 70px

.checkBox
  height: 30px
  margin-top: 20px
  margin-bottom: 20px

.optionDistance
  padding: 20px

.optionRating
  padding-top: 5px
  font-size: 16px
  color: $primary-red

.optionCuisine
  font-size: 14px
  text-align: left
  padding-left: 15px

.optionInfo
  font-size: 14px
  text-align: left
  padding-left: 15px