@import "../../global_styles/colors"
@import "../../global_styles/shared_styles"
@import "./stylesheet"

$option-height = 100px

.option
  height: $option-height
  padding: 15px
  border-radius: 3px
  border: solid 1px $border-grey
  cursor: pointer
  > div
    height: 70px

.selectedOption
  @extend .option
  border: solid 1px $primary-blue
  background-color: $background-blue

.infoContainer
  float: left
  min-width: 320px

.optionTitle
  text-align: left
  font-size: 22px
  font-weight: 900
  color: $primary-blue

.optionImg
  height: 70px
  float: left
  padding: 0 30px

.checkBox
  height: 20px
  margin: 25px 0
  padding-left: 10px
  float: left

.optionDistance
  padding: 20px
  float: right

.optionRating
  padding-top: 5px
  font-size: 16px
  color: $primary-red

.emptyStar
  color: $grey-subtitle

.optionCuisine
  font-size: 16px
  color: $grey-subtitle
  text-align: left
  padding-left: 15px

.optionInfo
  font-size: 14px
  text-align: left
  padding-left: 15px
