@import "../../styles/colors"
@import "../../styles/shared_styles"

.logo
  color: $white
  font-size: 28px

.input
  display: inline-block
  padding-left: 20px
  padding-right: 20px
  font-weight: 300
  width: 350px
  box-shadow: none

.formGroup
  input
    @media (min-width: 768px)
      width: 250px !important

a:hover
  text-decoration: none
  color: $white

.imgBtn
  background-color: $white
  padding: 3px
  border-radius: 3px
  width: 30px
  height: @width
  padding: 5px
  min-width: 20px !important
  margin-top: 0px
  margin-left: 5px
  cursor: pointer

.copyButton
  position: relative
  top: -2px
  left: 5px

.gridPadding
  @media screen and (min-width: 1200px)
    padding-left: 100px
    padding-right: 100px
