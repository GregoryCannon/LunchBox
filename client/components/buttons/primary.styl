@import "../../styles/colors"
@import "../../styles/shared_styles"

.btnPrimary
  width: 170px
  height: 48px
  display: block
  margin: 0 auto
  padding: 10px
  color: $white
  background-color: $button-blue
  font-size: 19px
  border: none

  &:hover
    color: $white
    background-color: $button-blue
    border-color: $white

  &:focus
    color: $white
    background-color: $button-blue
    border-color: $white

  &:active:focus
    color: $white
    background-color: $button-blue
    border-color: $white

.btnPopup
  background-color: $white
  border-color: $white
  color: $primary-red
  font-size: 16px
  width: auto
  height: auto
  margin-top: 35px

  &:hover
    color: $primary-red
    background-color: $white
    border-color: $white

  &:focus
    color: $primary-red
    background-color: $white
    border-color: $white

  &:active:focus
    color: $primary-red
    background-color: $white
    border-color: $white
