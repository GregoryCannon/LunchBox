@import "../../styles/colors"
@import "../../styles/shared_styles"


.voteBtn
  height: 44px
  float: right
  cursor: pointer
  border-radius: 3px
  border-shadow: none
  border: none
  margin: 5px
  color: $white
  font-weight: 500
  background-color: $overlay-grey
  margin-top: 14px
  outline: none

.downBtn
  @extend .voteBtn
  &:hover
    background-color: $button-red

  &:focus
    background-color: $button-red

  &:active:focus
    background-color: $button-red

.selectedDownBtn
  @extend .downBtn
  background-color: $button-red

.upBtn
  @extend .voteBtn
  &:hover
    background-color: $button-blue

  &:focus
    background-color: $button-blue

  &:active:focus
    background-color: $button-blue

.selectedUpBtn
  @extend .upBtn
  background-color: $button-blue

.voteImg
  height: 40px
  padding: 10px 5px
  border-radius: 7px

.numVotes
  color: $white !important
  display: inline !important
  padding-top: 5px !important
  margin: 0 5px !important
  float: right !important

.tooltip
  > div
    font-size: 16px !important
